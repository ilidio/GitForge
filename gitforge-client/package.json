{
  "name": "gitforge-client",
  "productName": "GitForge",
  "version": "0.1.0",
  "description": "A modern, AI-powered Git client built with web technologies.",
  "author": "Ilidio Martins <ilidio.martins@gmail.com>",
  "homepage": "https://github.com/ilidiomartins/gitforge",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "dist": "next build && electron-builder",
    "prod": "cd .. && ./publish-server.sh && cd gitforge-client && npm run dist",
    "test": "vitest"
  },
  "build": {
    "appId": "com.gitforge.app",
    "productName": "GitForge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "public/**/*",
      "out/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/logo.png",
      "target": "dmg"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "GitForge",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/logo.png",
      "category": "Development",
      "maintainer": "Ilidio Martins <ilidio.martins@gmail.com>"
    },
    "extraResources": [
      {
        "from": "server-dist/${os}",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "electron-serve": "^3.0.0"
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@gitgraph/react": "^1.6.0",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "ansi-to-react": "^6.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.4.0",
    "lucide-react": "^0.562.0",
    "monaco-editor": "^0.55.1",
    "next": "16.1.1",
    "prismjs": "^1.30.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  }
}
